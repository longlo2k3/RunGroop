@model IEnumerable<Club>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card shadow-sm">
                <img   class="bd-placeholder-img card-img-top" width="100%" height="225" src="@item.Image"></img>
                <div class="card-body">
                    <p class="card-text">@item.Title</p>
                    <p class="card-text">@item.Description</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a href="@Url.Action("Detail", "Club", new {id= item.Id})">
                                <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                            </a>
                                <button onclick="location.href='@Url.Action("Edit", "Club", new {id = item.Id})'" type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                        </div>
                        <small class="text-body-secondary">@item.ClubCategory</small>
                    </div>
                </div>
            </div>
        </div>
    }   
</div>

